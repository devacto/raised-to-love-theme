<!-- start post -->
{{#foreach posts}}
<article id="{{id}}" class="{{post_class}}">
	{{#if featured}}
	<div class="featured">
		<i class="fa fa-star"></i>
	</div>
	{{/if}}
	<div class="post-head">
		<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
		<div class="post-meta">
			<span class="date">{{date format="MMMM DD, YYYY"}}</span> &bull;
		</div>
	</div>
	{{#if image}}
	<div class="featured-media">
		<a href="{{url}}"><img src="{{image}}" alt="{{{title}}}"></a>
	</div>
	{{/if}}
	<div class="post-content">
		{{content words="50"}}
	</div>
	<div class="post-permalink">
		<a href="{{url}}" class="btn btn-default">Continue Reading</a>
	</div>
</article>
{{/foreach}}
<!-- end post -->
